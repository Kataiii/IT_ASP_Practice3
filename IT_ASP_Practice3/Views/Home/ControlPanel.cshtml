@model IT_ASP_Practice3.Models.OrderContext

@{
    ViewBag.Title = "ControlPanel";
}

<html>
<head>
    <title>ControlPanel</title>
</head>
<body>
    <div class="conteiner">
        <h1>Customers</h1>

        <div class="conteiner__wrap">
            <button id="button_add">Add</button>
            <button id="button_update">Update</button>
            <button id="button_delete">Delete</button>
        </div>

        <div id="panel_add">
            <p>Enter the name of the new user:</p>
            @using (Html.BeginForm("ActionCustomer", "Home", FormMethod.Post))
            {
                <input type="text" class="text__field" id="new_user_name" name="new_user_name" placeholder="Name" />
                <button name="action" value="add">Add customer</button>
            }
        </div>

        <div id="panel_update">
            <p>Enter the ID of the customer you want to change and a new name:</p>
            @using (Html.BeginForm("ActionCustomer", "Home", FormMethod.Post))
            {
                <input type="text" class="text__field" id="id_user_update" name="id_user_update" placeholder="Id" />
                <input type="text" class="text__field" id="name_user_update" name="name_user_update" placeholder="New name" />
                <button name="action" value="update">Update customer</button>
            }
        </div>

        <div id="panel_delete">
            <p>Enter the ID of the customer you want to delete:</p>
            @using (Html.BeginForm("ActionCustomer", "Home", FormMethod.Post))
            {
                <input type="text" class="text__field" id="id_user_delete" name="id_user_delete" placeholder="Id" />
                <button name="action" value="delete">Delete customer</button>
            }
        </div>

        @using (Html.BeginForm("Check_RadioButton", "Home", FormMethod.Get))
        {
            <div class="conteiner__wrap">
                <div class="conteiner__wrap__radiobutton">
                    @Html.RadioButton("customer", "not_orders", true)
                    <span>Customers</span> <br />
                </div>
                <div class="conteiner__wrap__radiobutton">
                    @Html.RadioButton("customer", "with_orders")
                    <span>Customers with orders</span> <br />
                </div>
                <button>Show</button>
            </div>
        }

        @Html.Partial("Customers", @Model.Customers)


        @*Products*@


        <h1>Products</h1>
        <div class="conteiner__wrap">
            <button id="button_add_product">Add</button>
            <button id="button_update_product">Update</button>
            <button id="button_delete_product">Delete</button>
        </div>

        <div id="panel_add_product">
            <p>Enter the name and cost of the new product:</p>
            @using (Html.BeginForm("ActionProducts", "Home", FormMethod.Post))
            {
                <input type="text" class="text__field" id="new_product_name" name="new_product_name" placeholder="Name" />
                <input type="text" class="text__field" id="new_product_cost" name="new_product_cost" placeholder="Cost" />
                <button name="action" value="add">Add product</button>
            }
        </div>

        @Html.Partial("Products", @Model.Products)
